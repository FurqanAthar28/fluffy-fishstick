{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django DRF Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/OrganizationStructure/manage.py", 
            "args": ["runserver", "--noreload"],
            "django": true,
            "cwd": "${workspaceFolder}/OrganizationStructure",
            "console": "integratedTerminal",
            "env": {
                "DJANGO_SETTINGS_MODULE": "OrganizationStructure.settings",
                "PYTHONPATH": "${workspaceFolder}/OrganizationStructure"
            }
        }
    ]
}
